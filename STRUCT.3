#include <stdio.h>
#include <string.h>

int main() {
    typedef struct icc {
        char name[20];
        int age;
        int nooftestmatch;
        int avgruns;
    } icc;

    icc arr[3];

    // Input data for all 3 players
    for (int i = 0; i < 3; i++) {
        printf("ENTER THE NAME FOR PLAYER %d: ", i + 1);
        scanf("%s", arr[i].name); // No & for strings

        printf("ENTER THE AGE FOR PLAYER %d: ", i + 1);
        scanf("%d", &arr[i].age);

        printf("ENTER THE NOOFTESTMATCH FOR PLAYER %d: ", i + 1);
        scanf("%d", &arr[i].nooftestmatch);

        printf("ENTER THE AVGRUNS FOR PLAYER %d: ", i + 1);
        scanf("%d", &arr[i].avgruns);

        printf("\n");
    }

    // Print data for all 3 players
    for (int i = 0; i < 3; i++) {
        printf("PLAYER %d DETAILS:\n", i + 1);
        printf("name         : %s \n", arr[i].name);
        printf("age          : %d \n", arr[i].age);
        printf("nooftestmatch: %d \n", arr[i].nooftestmatch);
        printf("avgruns      : %d \n\n", arr[i].avgruns);
    }

    return 0;
}
